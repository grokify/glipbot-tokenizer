{
    "name": "Glipbot Tokenizer",
    "description": "Easily create tokens for your bots",
    "keywords": ["Glip", "token"],
    "website": "https://glipbot-tokenizer.herokuapp.com",
    "repository": "https://github.com/grokify/glipbot-tokenizer",
    "addons": [
        "redistogo:nano",
        "papertrail:choklad"
    ],
    "formation": {
        "web": {
            "quantity": 1,
            "size": "Free"
        }
    },
    "env": {
        "APP_SERVER_URL": {
            "description": "Your base URL",
            "value": "https://myapp.herokuapp.com",
            "required": true
        },
        "SPARKPOST_API_KEY": {
            "description": "Your SparkPost API Key (https://sparkpost.com)",
            "value": "",
            "required": true
        },
        "SPARKPOST_EMAIL_SENDER": {
            "description": "Your sender email",
            "value": "",
            "required": true
        }
    }
}